<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".GamePage">

    <TextView
        android:id="@+id/player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="47dp"
        android:width="150dp"
        android:height="50dp"
        android:gravity="left"
        android:text="player1"
        android:textSize="35dp"
        app:layout_constraintEnd_toStartOf="@+id/player2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginLeft="47dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:width="150dp"
        android:height="50dp"
        android:gravity="right"
        android:text="player2"
        android:textSize="35dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/player1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/player1" />

    <GridLayout
        android:id="@+id/view"
        android:layout_width="390dp"
        android:layout_height="390dp"
        android:background="@drawable/new123"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.679">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:onClick="newAction" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:onClick="newAction" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="15dp"
            android:onClick="newAction" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:onClick="newAction" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:onClick="newAction" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="15dp"
            android:onClick="newAction" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:onClick="newAction" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:onClick="newAction" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="15dp"
            android:onClick="newAction" />
    </GridLayout>

    <TextView
        android:id="@+id/nothing"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Wins"
        android:textColor="#75BBFA"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/player2score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/player1score"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="left"
        android:text="0"
        android:textColor="#75BBFA"
        android:textSize="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/player2score"
        app:layout_constraintStart_toStartOf="@+id/player1" />

    <TextView
        android:id="@+id/player2score"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:gravity="right"
        android:shadowColor="#FFFFFF"
        android:text="0"
        android:textColor="#75BBFA"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="@+id/player2"
        app:layout_constraintTop_toBottomOf="@+id/player2" />

</androidx.constraintlayout.widget.ConstraintLayout>